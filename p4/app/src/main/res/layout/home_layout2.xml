<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_layout2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="热门电器"
            android:textSize="15dp"
            android:layout_marginLeft="13dp"
            android:id="@+id/home_category_textv"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:id="@+id/home_category_textv1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="更多>"
                android:textSize="15dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="13dp"/>
        </LinearLayout>
    </LinearLayout> <!--分类名称-->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CACDD1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <include
                layout="@layout/home_layout2_1"
                android:id="@+id/include_home_layout2">
            </include>
        </HorizontalScrollView> <!--横向滚动-->
    </LinearLayout>
</LinearLayout>