<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/color1"
    android:layout_marginTop="1dp">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/shopcart_layout1_2_list">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/shopcart_layout1_2_checkbox"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/image_shopcart_layout1_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="德芙巧克力"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/shopcart_layout1_2_text"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textSize="20dp"
                            android:textColor="@color/color3"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="9999"
                            android:textSize="20dp"
                            android:textColor="@color/color3"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/shopcart_layout1_2_text1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="15dp">

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:id="@+id/shopcart_layout1_2_minus">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_marginRight="2dp"
                                    android:background="@drawable/icon_minus"
                                    android:layout_marginLeft="10dp"
                                    android:layout_gravity="center"/>
                            </LinearLayout>

                            <EditText
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:text="1"
                                android:gravity="center"
                                android:id="@+id/shopcart_layout1_2_edit"/>

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:id="@+id/shopcart_layout1_2_add">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:background="@drawable/icon_add"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="2dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/color3"
        android:id="@+id/shopcart_layout1_2_deletebutton">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff" />
    </RelativeLayout>
</LinearLayout>