<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar_layout"
        android:id="@+id/include_logindown_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <include
            layout="@layout/register_layout1"
            android:id="@+id/logindown1"></include>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CACDD1" />

        <include
            layout="@layout/register_layout1"
            android:id="@+id/logindown2"></include>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CACDD1" />

        <include
            layout="@layout/register_layout1"
            android:id="@+id/logindown3"></include>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CACDD1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/logindown_save_layout_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:text="保存修改"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bt_register_selector"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/logindown_layout_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:text="退出登录"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bt_register_selector"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>